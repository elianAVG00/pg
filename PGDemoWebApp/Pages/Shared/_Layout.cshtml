@{
    // Detección de ruta activa (en minúsculas para evitar problemas de casing)
    var currentPath = Context.Request.Path.Value?.ToLowerInvariant() ?? "/";
    bool isPagos = currentPath == "/" || currentPath.Contains("/index");
    // bool isAnulaciones = currentPath.Contains("/anulaciones");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo de Pago Payment Gateway</title>
    <link rel="icon" href="~/favicon.png" type="image/png" />

    <link rel="stylesheet" href="~/PGDemoWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-size: 0.95rem; /* Reducción global ligera */
        }
        /* ... (el resto de los estilos de _Layout.cshtml se mantienen igual) ... */
        .container-main {
            max-width: 960px;
            flex-grow: 1;
            margin-top: 0.5rem; /* Reducido */
        }

        .card {
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .alert-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1050;
            min-width: 300px;
        }

        .form-label {
            font-weight: 500;
            font-size: 0.9rem; 
            margin-bottom: 0.2rem; 
        }

        pre#jsonResponsePanel {
            background-color: #e9ecef;
            padding: 1rem;
            border-radius: 0.25rem;
            max-height: 400px;
            overflow-y: auto;
            white-space: pre-wrap;
            word-break: break-all;
            font-family: monospace;
        }

        .header-custom {
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
            margin-bottom: 1.5rem;
        }

        .footer-custom {
            background-color: #343a40;
            color: white;
            padding: 0.75rem 0;
            margin-top: auto;
            text-align: center;
            width: 100%;
        }

        .header-custom {
            background-color: #343a40;
            color: white;
            padding: 1rem 0 0.75rem 0;
            margin-bottom: 0;
        }

            .header-custom .lead {
                color: #d2d6dc;
                font-size: 0.95rem;
                margin-top: 0.25rem;
                margin-bottom: 0.25rem;
            }

        /* Barra de navegación secundaria (estilo similar al mock de anulaciones) */
        .nav-bar-wrapper {
            background-color: #ffffff;
            border-bottom: 1px solid #e2e6ea;
            box-shadow: 0 2px 3px rgba(0,0,0,0.04);
        }

        .main-nav {
            display: flex;
            gap: 2.5rem;
            padding: 0.85rem 0;
            font-weight: 500;
            justify-content: flex-start;
        }

        .main-nav a {
            position: relative;
            text-decoration: none;
            color: #495057;
            padding-bottom: 0.35rem;
            font-size: 0.95rem;
            transition: color .15s ease;
        }

        .main-nav a:hover {
            color: #0d6efd;
        }

        .main-nav a.active {
            color: #0d6efd;
            font-weight: 600;
        }

        .main-nav a.active::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            height: 3px;
            width: 100%;
            background: #0d6efd;
            border-radius: 2px;
        }

        .footer-custom {
            background-color: #343a40;
            color: white;
            padding: 0.75rem 0;
            margin-top: auto;
            text-align: center;
            width: 100%;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <header class="header-custom">
        <div class="container text-center">
            <h1><a class="text-white text-decoration-none" asp-area="" asp-page="/Index"><i class="fas fa-credit-card me-2"></i>Demo Payment Gateway</a></h1>
            <p class="lead">Simulación de Flujo de Pago</p>
        </div>
    </header>

    <!-- Barra de navegación (Pagos / Anulaciones) -->
    <div class="nav-bar-wrapper">
        <div class="container">
            <nav class="main-nav">
                <a asp-area="" asp-page="/Index"
                   class="@(isPagos ? "active" : "")">
                    Pagos
                </a>
                @* <a asp-area="" asp-page="/Anulaciones"
                   class="@(isAnulaciones ? "active" : "")">
                    Anulaciones
                </a> *@
            </nav>
        </div>
    </div>

    <div id="alertContainer" class="alert-container">
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer-custom text-muted">
        <div class="container">
            &copy; 2025 - PGDemoWebApp -
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>