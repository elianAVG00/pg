@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Demo de Pago Payment Gateway";
}

@if (!string.IsNullOrEmpty(Model.CallbackMessageToDisplay))
{
    string alertClass = "alert-info"; 
    if (Model.CallbackMessageToDisplay.ToLower().Contains("aprobado") || Model.CallbackMessageToDisplay.ToLower().Contains("aprobada"))
    {
        alertClass = "alert-success"; 
    }
    else if (Model.CallbackMessageToDisplay.ToLower().Contains("rechazado") || Model.CallbackMessageToDisplay.ToLower().Contains("error"))
    {
        alertClass = "alert-danger"; 
    }

    <div class="alert @alertClass alert-dismissible fade show" role="alert">
        @Model.CallbackMessageToDisplay
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessageToDisplay) && string.IsNullOrEmpty(Model.CallbackMessageToDisplay))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @Model.ErrorMessageToDisplay
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row g-4">

    <div class="col-lg-7">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-play-circle me-2"></i>Iniciar un Pago</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="Payment" id="paymentFormActual">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="PaymentInput.MerchantId" class="form-label">Servicios disponibles:</label>
                        <select asp-for="PaymentInput.MerchantId" asp-items="Model.ServicesOptions" class="form-select" id="csMerchantId">
                            <option value="">Seleccione un Servicio</option>
                        </select>
                        <span asp-validation-for="PaymentInput.MerchantId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentInput.ProductId" class="form-label">Tarjetas disponibles:</label>
                        <select asp-for="PaymentInput.ProductId" asp-items="Model.ProductsOptions" class="form-select" id="csProductId" disabled>
                            <option value="">Seleccione una tarjeta (primero elija Merchant)</option>
                        </select>
                        <span asp-validation-for="PaymentInput.ProductId" class="text-danger"></span>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-md-5">
                            <label asp-for="PaymentInput.CurrencyCode" class="form-label">Código de Moneda</label>
                            <input asp-for="PaymentInput.CurrencyCode" class="form-control" readonly style="background-color: #e9ecef; opacity: 1;" />
                        </div>
                        <div class="col-md-7">
                            <label asp-for="PaymentInput.Amount" class="form-label">Monto (Ej: 123,45)</label>
                            <input asp-for="PaymentInput.Amount" class="form-control" placeholder="123,45" />
                            <span asp-validation-for="PaymentInput.Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentInput.MailAddress" class="form-label"></label>
                        <input asp-for="PaymentInput.MailAddress" type="email" class="form-control" placeholder="usuario@ejemplo.com" />
                        <span asp-validation-for="PaymentInput.MailAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3 p-3 bg-light border rounded">
                        <p class="mb-1"><small><strong>Código de Pago Electrónico (EPC):</strong> <span id="csElectronicPaymentCodeDisplay">@Model.PaymentInput.ElectronicPaymentCode</span></small></p>
@*                         <p class="mb-0"><small><strong>Código de Barras:</strong> <span id="csBarCodeDisplay">@Model.PaymentInput.BarCode</span></small></p>
 *@                    </div>

                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-dollar-sign me-2"></i>Pagar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0"><i class="fas fa-search me-2"></i>Consultar Transacción</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="QueryTransaction" id="transactionQueryFormActual">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="InputTransactionId" class="form-label"></label>
                        <input asp-for="InputTransactionId" class="form-control" placeholder="Ingrese ID de transacción" />
                        <span asp-validation-for="InputTransactionId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-secondary w-100"><i class="fas fa-search me-2"></i>Consultar</button>
                </form>

                <div class="mt-4">
                    <h5>Respuesta de la Consulta:</h5>
                    <pre id="jsonResponsePanel">@(Model.TransactionJsonResult ?? "Esperando consulta...")</pre>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
